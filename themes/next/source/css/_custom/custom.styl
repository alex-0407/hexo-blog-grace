.position-static {
  width: 200px;
  height: 100px;
  background-color: #C9FFFF;
}

.position-relative {
  width: 200px;
  height: 100px;
  background-color: #C9FFFF;
}

.position-relative-input {
  position: relative;
  left: 15px;
  top: -15px;
}
.position-absolute {
  width: 200px;
  height: 100px;
  -webkit-box-flex:1;
  border: 1px solid #28AE65;
  border-radius:6px;
  padding: 20px;
  position: relative;
  font-size: 12px;
}

